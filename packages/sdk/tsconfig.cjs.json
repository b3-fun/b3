{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist/cjs",
    "module": "commonjs",
    "paths": {
      "@b3dotfun/sdk": ["./src"],
      "@b3dotfun/sdk/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "declaration": true,
    "isolatedModules": false,
    "resolveJsonModule": true
  },
  "exclude": ["**/__tests__/**", "**/*.test.ts", "**/*.test.tsx"]
}
